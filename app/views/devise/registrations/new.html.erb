<%= image_tag "G.png", class: "chicken6" %>
<div class="col-md-8 signup">
  <div id="cntnair">
  <%= link_to "Sign in", new_user_session_path, class:"btn btn-outline-danger btnsignin" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
<div class="col-sm-6">
  <div class="field">
    <%= f.label :username %>
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
  </div>
<div class="field">
    <%= f.label :firstname %>
    <%= f.text_field :firstname, autofocus: true, autocomplete: "firstame", class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :lastname %>
    <%= f.text_field :lastname, autofocus: true, autocomplete: "firstame", class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :birth %>
    <%= f.date_field :birth, autofocus: true, autocomplete: "", class: "form-control"%>
  </div>
  
  
</div>
<div class="col-sm-6 left-field">
  <div class="field">
    <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
  </div><br />
  <div class="field">
      <%= f.check_box :is_male, class:"custom-control-description" %>
      <%= f.label :is_male %>
    </div>
    <div class="field">
      <%= f.check_box :is_female, class:"custom-control-description" %>
      <%= f.label :is_female %>
    </div>
    
</div>

  <div class="actions">
    <div class="field">
    <%= f.label :about_user %>
    <%= f.text_area :about_user, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>
</br>
    <%= f.submit "Sign up", class: "form-control btn-outline-success btn" %>
 </div>
<% end %>
